{
  "name": "ufs",
  "version": "1.0.0",
  "description": "ultra foundation solution",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enforcer-squad/ufs.git"
  },
  "keywords": [
    "foundation",
    "cli",
    "deploy"
  ],
  "author": "xg-a06 <enforcer.a06@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enforcer-squad/ufs/issues"
  },
  "homepage": "https://github.com/enforcer-squad/ufs#readme",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "clean": "pnpm --filter=@ufs/* run clean && rimraf ./node_modules && pnpm i",
    "start": "pnpm  --filter=@ufs/* run  --parallel start",
    "build": "pnpm --filter=@ufs/* run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.3.0",
    "commander": "^11.1.0",
    "install": "^0.13.0"
  },
  "lint-staged": {
    "packages/**/src/*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
